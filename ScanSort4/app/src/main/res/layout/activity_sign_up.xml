<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".SignUp"
    android:background="@drawable/backgroung_paper">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textSize="30sp"
        android:text="Create new account"
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"/>

    <EditText
        android:id="@+id/activity_signup_lastname"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:hint="Last name"
        android:drawableLeft="@drawable/ic_account"
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:inputType="text" />

    <EditText
        android:id="@+id/activity_signup_firstname"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:hint="First name"
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:drawableLeft="@drawable/ic_account"
        android:inputType="text" />

    <EditText
        android:id="@+id/activity_signup_email"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:hint="Email"
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:drawableLeft="@drawable/ic_email"
        android:inputType="textEmailAddress" />


    <EditText
        android:id="@+id/activity_signup_password"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:hint="Password"
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:drawableLeft="@drawable/ic_lock"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/activity_signup_password2"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:hint="Confirm password"
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:drawableLeft="@drawable/ic_lock"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/activity_signup_button"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:text="Sign Up"
        android:textColor="#FFFFFF"
        android:background="#5CB85C"/>

    <TextView
        android:id="@+id/activity_signup_backToLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="#0000FF"
        android:textSize="15sp"
        android:text="Already registered ? Login here"/>

</LinearLayout>